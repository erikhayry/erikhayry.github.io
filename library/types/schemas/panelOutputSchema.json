{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[1-9]\\d*\\.[1-9]\\d*\\.[1-9]\\d*$"
    },
    "description": {
      "type": "string"
    },
    "narration": {
      "type": "string"
    },
    "dialogs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string"
          },
          "person": {
            "type": "string"
          }
        },
        "required": [
          "text",
          "person"
        ],
        "additionalProperties": false
      }
    },
    "quotes": {
      "type": "string"
    },
    "info": {
      "type": "string"
    }
  },
  "required": [
    "id",
    "description"
  ],
  "additionalProperties": false
}