{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[1-9]\\d*\\.[1-9]\\d*\\.[1-9]\\d*$"
    },
    "description": {
      "type": "object",
      "propertyNames": {
        "type": "string",
        "enum": [
          "en",
          "se"
        ]
      },
      "additionalProperties": {
        "type": "string"
      }
    },
    "narration": {
      "type": "object",
      "propertyNames": {
        "type": "string",
        "enum": [
          "en",
          "se"
        ]
      },
      "additionalProperties": {
        "type": "string"
      }
    },
    "dialogs": {
      "type": "array",
      "items": {
        "type": "object",
        "propertyNames": {
          "type": "string",
          "enum": [
            "en",
            "se"
          ]
        },
        "additionalProperties": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string"
            },
            "person": {
              "type": "string"
            }
          },
          "required": [
            "text",
            "person"
          ],
          "additionalProperties": false
        }
      }
    },
    "reference": {
      "type": "object",
      "properties": {
        "image": {
          "type": "boolean"
        },
        "description": {
          "anyOf": [
            {
              "type": "object",
              "propertyNames": {
                "type": "string",
                "enum": [
                  "en",
                  "se"
                ]
              },
              "additionalProperties": {
                "type": "string"
              }
            },
            {
              "type": "array",
              "items": {
                "type": "object",
                "propertyNames": {
                  "type": "string",
                  "enum": [
                    "en",
                    "se"
                  ]
                },
                "additionalProperties": {
                  "type": "string"
                }
              }
            }
          ]
        },
        "link": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string",
              "format": "uri"
            },
            "title": {
              "type": "object",
              "propertyNames": {
                "type": "string",
                "enum": [
                  "en",
                  "se"
                ]
              },
              "additionalProperties": {
                "type": "string"
              }
            }
          },
          "required": [
            "url",
            "title"
          ],
          "additionalProperties": false
        },
        "place": {
          "type": "object",
          "properties": {
            "coordinates": {
              "type": "object",
              "properties": {
                "lat": {
                  "type": "number"
                },
                "lon": {
                  "type": "number"
                }
              },
              "required": [
                "lat",
                "lon"
              ],
              "additionalProperties": false
            },
            "name": {
              "type": "object",
              "propertyNames": {
                "type": "string",
                "enum": [
                  "en",
                  "se"
                ]
              },
              "additionalProperties": {
                "type": "string"
              }
            }
          },
          "required": [
            "coordinates",
            "name"
          ],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "id",
    "description"
  ],
  "additionalProperties": false
}