{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[1-9]\\d*\\.[1-9]\\d*\\.[1-9]\\d*$"
    },
    "description": {
      "type": "object",
      "propertyNames": {
        "type": "string",
        "enum": [
          "en",
          "se"
        ]
      },
      "additionalProperties": {
        "type": "string"
      }
    },
    "narration": {
      "type": "object",
      "propertyNames": {
        "type": "string",
        "enum": [
          "en",
          "se"
        ]
      },
      "additionalProperties": {
        "type": "string"
      }
    },
    "dialogs": {
      "type": "array",
      "items": {
        "type": "object",
        "propertyNames": {
          "type": "string",
          "enum": [
            "en",
            "se"
          ]
        },
        "additionalProperties": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string"
            },
            "person": {
              "type": "string"
            }
          },
          "required": [
            "text",
            "person"
          ],
          "additionalProperties": false
        }
      }
    }
  },
  "required": [
    "id",
    "description"
  ],
  "additionalProperties": false
}